{
  "name": "authforge",
  "version": "1.0.0",
  "description": "Self-hosted Auth0 alternative with Passkeys, OAuth, Magic Links & Encrypted Vault",
  "author": "Osayande Agbonkpolor <osayande@cyberguardng.ca>",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "dev:ui": "cd ui && npm run dev",
    "build": "cd ui && npm run build",
    "deploy": "npm run build && wrangler deploy",
    "db:migrate": "wrangler d1 execute authforge-db --local --file=./schema.sql",
    "db:migrate:prod": "wrangler d1 execute authforge-db --remote --file=./schema.sql",
    "db:studio": "wrangler d1 execute authforge-db --local --command \"SELECT 1\"",
    "generate:secret": "node -e \"console.log(require('crypto').randomBytes(32).toString('hex'))\"",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "hono": "^4.6.0",
    "@simplewebauthn/server": "^10.0.0",
    "jose": "^5.9.0",
    "nanoid": "^5.0.7",
    "otpauth": "^9.3.0",
    "qrcode": "^1.5.4"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241205.0",
    "typescript": "^5.6.0",
    "wrangler": "^3.99.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
